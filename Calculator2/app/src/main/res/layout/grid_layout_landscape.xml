<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:columnCount="4"
    android:orientation="horizontal"
    android:background="@color/black">

    <TextView

        android:id="@+id/expression"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:paddingRight="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/result"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:paddingRight="20dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:backgroundTint="@color/light_gray"
        android:text="AC"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/backspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:backgroundTint="@color/light_gray"
        android:text="âŒ«"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/orange"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/number_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:backgroundTint="@color/gray"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/number_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/gray"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/number_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/gray"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/multiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/orange"
        android:text="*"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/number_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:backgroundTint="@color/gray"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/number_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/gray"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/number_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/gray"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/subtraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/orange"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/number_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:backgroundTint="@color/gray"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/number_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/gray"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/number_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/gray"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/add_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/orange"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/number_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:backgroundTint="@color/gray"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/ponto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:backgroundTint="@color/gray"
        android:text="."
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="@color/orange"
        android:text="="
        android:textColor="@color/black"
        android:textSize="10sp" />
</GridLayout>